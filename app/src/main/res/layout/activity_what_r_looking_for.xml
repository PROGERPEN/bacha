<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffcfe2"
        tools:context=".WhatRLookingFor">


    <Button
            android:background="?attr/selectableItemBackground"
            android:drawableEnd="@drawable/arrow_right_24_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/looking_for_button"
            android:drawableRight="@drawable/arrow_right_24_icon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="Who are you looking for?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/howRULokoFor" android:layout_marginTop="244dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/enter_first_next_btn" android:textSize="30sp"
            app:layout_constraintVertical_bias="0.38" android:textAllCaps="false"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/howRULokoFor" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/looking_for_button" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.092">
        <RadioButton
                android:text="Male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/maleRBtn" android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                android:textSize="24sp"/>
        <RadioButton
                android:text="Female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/femaleRBtn" android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                android:textSize="24sp"/>
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>